    dialog[i,0] = _NONE;
    dialog[i,1] = 'unassigned text';
    dialog[i,2] = false; // add projection
    dialog[i,3] = false; // remove projection
}

dialogPanels = -1;
addDialog(_SHOPKEEP,"Hey welcome!");
if irandom(3) == 1 addDialog(_SHOPKEEP,"Meet my daughter, Sally!");

showShop = false;
rectAlpha = 1;

make(oFader);
with make(oDialog) gradientSlideIn = 128;

/////////////////////
// buttons stuff
/////////////////////

var dist = vw/3 - 16;
var ypos = vh/3 - 64;

with make(vw/2-dist,ypos,oShopButton) image_index = 1;
with make(vw/2,ypos,oShopButton) image_index = 2;
with make(vw/2+dist,ypos,oShopButton) image_index = 4;
with make(64,vh-80,oShopButton) {
    sprite_index = sBack;
    buttonSize = 90;
    image_xscale = buttonSize;
    image_yscale = buttonSize;
}

with oShopButton {
    if sprite_index != sBack x -= vw;
    active = false;
}

