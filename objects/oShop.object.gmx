c2 = make_color_rgb(218,2,167);
c3 = make_color_rgb(77,253,120);
c4 = make_color_rgb(253,209,77);
c5 = make_color_rgb(253,106,30);
cStart = choose(c1,c3,c5);
cDest = choose(c2,c4);
objectAge = 0;
cycleDuration = 60*4;

noisesurf = -1;

//

pickupHUD = make(oPickup);
