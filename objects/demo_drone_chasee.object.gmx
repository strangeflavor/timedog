var nearest_predator = instance_nearest(x,y,demo_drone_chaser);
//Get distance
var predator_distance = point_distance(x,y,nearest_predator.x,nearest_predator.y);

if(predator_distance &lt; predator_range) { //Is within target range
    predator_obj = nearest_predator;
